doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Todo App 
        link(rel="stylesheet", href="./styles.css")
        link(rel="stylesheet", href="./resetcss.css")
    body
        .app 
            .header 
                .hero 
                    img(src="./assets/img/hero.png", alt="hero")
                .project-description Todo App

            .boards
                .boards__item 
                    span.title(contenteditable="true") Task Board Name 
                    .list
                    .form
                        textarea.textarea(placeholder="Type task")
                        .btns 
                            button.add Add Task
                            button.cancel Cancel 
                    button.addTask + New Task
        script(src="./main.dev.js") 